{
  "name": "chatgpt-vsc",
  "displayName": "chatgpt-vsc",
  "description": "chatgpt integration to make developer life easier",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/mzbac/chatgpt-vsc.git"
  },
  "publisher": "mzbac",
  "icon": "images/logo.jpeg",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chatgpt-vsc.grammar",
    "onCommand:chatgpt-vsc.customQuery"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatgpt-vsc.grammar",
        "title": "ChatGPT Grammar Check"
      },
      {
        "command": "chatgpt-vsc.customQuery",
        "title": "ChatGPT Custom Query"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "chatgpt-vsc.grammar",
          "when": "editorTextFocus",
          "group": "chatgpt-vsc"
        },
        {
          "command": "chatgpt-vsc.customQuery",
          "when": "editorTextFocus",
          "group": "chatgpt-vsc"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "ChatGPT VSC Configuration",
      "properties": {
        "chatgpt-vsc.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your ChatGPT API key."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4"
  }
}
